<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lumina Agency</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#1e1b4b] min-h-screen flex flex-col font-sans">

    <nav class="w-full bg-[#1e1b4b] text-white py-4 px-6 fixed top-0 left-0 z-50 shadow-md border-b border-purple-900/30">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-400 text-transparent bg-clip-text decoration-0">
                Lumina Agency
            </a>
            <div class="hidden md:flex space-x-8 text-sm font-medium">
                <a asp-controller="Home" asp-action="Index" class="hover:text-purple-300 transition text-white no-underline">Home</a>
                <a asp-controller="Services" asp-action="Index" class="hover:text-purple-300 transition text-white no-underline">Services</a>
            </div>
        </div>
    </nav>

    <main class="flex-grow pt-24 px-6 pb-12">
        <div class="max-w-6xl mx-auto">
            @RenderBody()
        </div>
    </main>

    <footer class="w-full bg-[#0f0e17] text-gray-400 py-8 px-6 mt-auto">
        <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center">
            <div class="mb-4 md:mb-0 text-center md:text-left">
                <h3 class="text-white font-bold text-lg">Lumina Agency</h3>
                <p class="text-sm mt-2">AI-Powered Solutions (ASP.NET Core MVC Version)</p>
            </div>
            <div class="text-sm">
                &copy; @DateTime.Now.Year Lumina Agency.
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>