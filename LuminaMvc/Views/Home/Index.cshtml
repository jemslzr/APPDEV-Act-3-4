@{
    ViewData["Title"] = "Home Page";
}

<section class="w-full bg-[#1e1b4b] text-white pt-20 pb-32 px-6 text-center">
    <div class="max-w-4xl mx-auto">
        <div class="inline-block px-4 py-1.5 mb-6 text-sm font-semibold tracking-wider text-purple-300 uppercase bg-purple-900/50 rounded-full border border-purple-700/50">
            AI-Powered Innovation
        </div>
        <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight bg-gradient-to-r from-white via-purple-200 to-purple-400 text-transparent bg-clip-text">
            Lumina Agency
        </h1>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
            We build intelligent digital solutions that automate workflows and elevate user experiences.
        </p>
        <div class="flex justify-center gap-4">
            <a href="#contact" class="px-8 py-4 bg-white text-[#1e1b4b] font-bold rounded-lg hover:bg-gray-100 transition shadow-lg no-underline">
                Start a Project
            </a>
            <a href="#expertise" class="px-8 py-4 bg-transparent border border-gray-500 text-white font-medium rounded-lg hover:border-white transition no-underline">
                Explore Services
            </a>
        </div>
    </div>
</section>

<section id="expertise" class="w-full max-w-6xl mx-auto px-6 py-24">
    <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">Our Expertise</h2>
        <p class="text-gray-400">Cutting-edge technologies we use to scale your business.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-8 bg-white border border-gray-200 rounded-2xl shadow-lg hover:shadow-xl transition duration-300">
            <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-lg mb-6 flex items-center justify-center text-2xl">🤖</div>
            <h3 class="text-xl font-bold mb-3 text-[#1e1b4b]">AI Integration</h3>
            <p class="text-gray-600 leading-relaxed">
                Seamlessly integrate LLMs like GPT-4 and Claude to automate customer support and data analysis.
            </p>
        </div>

        <div class="p-8 bg-white border border-gray-200 rounded-2xl shadow-lg hover:shadow-xl transition duration-300">
            <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-lg mb-6 flex items-center justify-center text-2xl">🚀</div>
            <h3 class="text-xl font-bold mb-3 text-[#1e1b4b]">Modern Web Dev</h3>
            <p class="text-gray-600 leading-relaxed">
                Blazing fast websites built with Next.js, React, and Tailwind CSS for optimal performance.
            </p>
        </div>

        <div class="p-8 bg-white border border-gray-200 rounded-2xl shadow-lg hover:shadow-xl transition duration-300">
            <div class="w-12 h-12 bg-pink-100 text-pink-600 rounded-lg mb-6 flex items-center justify-center text-2xl">☁️</div>
            <h3 class="text-xl font-bold mb-3 text-[#1e1b4b]">Cloud Solutions</h3>
            <p class="text-gray-600 leading-relaxed">
                Scalable and secure infrastructure hosted on AWS to ensure 99.9% uptime for your apps.
            </p>
        </div>
    </div>
</section>

<section id="contact" class="w-full max-w-6xl mx-auto px-6 pb-24 flex justify-center">
    <div class="flex flex-col md:flex-row w-full max-w-5xl bg-white rounded-3xl overflow-hidden shadow-2xl">

        <div class="w-full md:w-1/2 bg-gradient-to-br from-[#2e1065] to-[#4c1d95] p-12 text-white flex flex-col justify-between">
            <div>
                <h2 class="text-4xl font-bold mb-4">Let's Talk.</h2>
                <p class="text-purple-200 text-sm leading-relaxed">
                    Ready to start your project? Fill out the form and our AI agent will get back to you instantly.
                </p>
            </div>
            <div class="mt-8 space-y-2 text-sm text-purple-300">
                <p>📩 contact@lumina.agency</p>
                <p>📍 Manila, Philippines</p>
            </div>
        </div>

        <div class="w-full md:w-1/2 p-12 bg-white">
            <form>
                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Name</label>
                    <input type="text" class="w-full p-3 rounded-lg bg-gray-50 border border-gray-200 text-gray-800 focus:outline-none focus:border-purple-500 focus:bg-white transition" placeholder="John Doe" />
                </div>

                <div class="mb-4">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Email</label>
                    <input type="email" class="w-full p-3 rounded-lg bg-gray-50 border border-gray-200 text-gray-800 focus:outline-none focus:border-purple-500 focus:bg-white transition" placeholder="john@example.com" />
                </div>

                <div class="mb-6">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Message</label>
                    <textarea rows="4" class="w-full p-3 rounded-lg bg-gray-50 border border-gray-200 text-gray-800 focus:outline-none focus:border-purple-500 focus:bg-white transition resize-none" placeholder="Tell us about your project..."></textarea>
                </div>

                <button type="button" class="w-full py-3 rounded-lg font-bold text-white uppercase tracking-wider text-sm bg-[#0f172a] hover:bg-purple-900 hover:shadow-lg transition-all duration-200">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</section>