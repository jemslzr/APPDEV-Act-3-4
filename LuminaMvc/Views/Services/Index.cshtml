@model IEnumerable<LuminaMvc.Models.Service>

    @{ ViewData["Title"] = "Our Services"; }

    <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-white">Manage Services</h2>
        <a asp-action="Create" class="mt-4 inline-block px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-500 transition no-underline">
            + Add New Service
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        @foreach (var item in Model)
    {
        <div class="p-6 bg-white rounded-xl shadow-lg">
            <h3 class="text-xl font-bold text-[#1e1b4b]">@item.Title</h3>
            <p class="text-gray-600 mt-2 mb-4 text-sm">@item.Description</p>
            <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-bold">
                @item.Price
            </span>
        </div>
    }
    </div>
