@model LuminaMvc.Models.Service
@{ ViewData["Title"] = "Add Service"; }

<div class="max-w-2xl mx-auto bg-white p-10 rounded-2xl shadow-2xl">
    <h2 class="text-2xl font-bold text-[#1e1b4b] mb-6">Add New Service</h2>

    <form asp-action="Create" class="space-y-4">
        <div>
            <label class="block text-sm font-bold text-gray-700">Service Title</label>
            <input asp-for="Title" class="w-full p-2 border border-gray-300 rounded focus:border-purple-500" />
        </div>
        <div>
            <label class="block text-sm font-bold text-gray-700">Price</label>
            <input asp-for="Price" class="w-full p-2 border border-gray-300 rounded focus:border-purple-500" />
        </div>
        <div>
            <label class="block text-sm font-bold text-gray-700">Description</label>
            <textarea asp-for="Description" rows="3" class="w-full p-2 border border-gray-300 rounded focus:border-purple-500"></textarea>
        </div>

        <button type="submit" class="w-full py-3 bg-[#1e1b4b] text-white font-bold rounded hover:bg-purple-900 transition">
            Save to Database
        </button>
    </form>
</div>